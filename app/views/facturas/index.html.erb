<p id="notice"><%= notice %></p>

<h1>Facturas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Users</th>
      <th>Clients</th>
      <th>Products</th>
      <th>Services</th>
      <th>Fecha</th>
      <th>Price</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.users %></td>
        <td><%= factura.clients %></td>
        <td><%= factura.products %></td>
        <td><%= factura.services %></td>
        <td><%= factura.fecha %></td>
        <td><%= factura.price %></td>
        <td><%= factura.details %></td>
        <td><%= link_to 'Ver', factura %></td>
        <td><%= link_to 'Editar', edit_factura_path(factura) %></td>
        <td><%= link_to 'Eliminar', factura, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Factura', new_factura_path %>
